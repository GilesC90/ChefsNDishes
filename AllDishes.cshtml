@using CRUDelicious.Models.Home;
@model IndexView;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Home</title>
</head>
<body>
    <div class="container">
        <div class="header">
            <h3><a href="/">Chefs</a> | Dishes </h3>
            <a href="dish/new">Add a Dish</a>
        </div>
        <div class="col">
            <p>Check out our tasty dishes!</p>
            <br>
            <p>________________________________________</p>
            <br>
            <table class="table table-striped">
                <tr>
                    <th>Name</th>
                    <th>Chef</th>
                    <th>Tastiness</th>
                    <th>Calories</th>
                </tr>
                @foreach(Dish dish in Model.AllDishes)
                {
                    <tr>
                        <td>
                            @dish.Name
                        </td>
                        <td>@dish.Chef.FirstName @dish.Chef.LastName</td>
                        <td>@dish.Tastiness</td>
                        <td>@dish.Calories</td>
                    </tr>
                }
            </table>
        </div>
    </div>
</body>
</html>