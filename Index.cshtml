@using CRUDelicious.Models.Home;
@model IndexView;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Home</title>
</head>
<body>
    <div class="container">
        <div class="header">
            <h3>Chefs | <a href="/dishes">Dishes</a></h3>
            <a href="chef/new">Add a Chef</a>
        </div>
        <div class="col">
            <p>Check out our roster of Chefs!</p>
            <br>
            <p>________________________________________</p>
            <br>
            <table class="table table-striped">
                <tr>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Numebr of Dishes</th>
                </tr>
                @foreach(Chef chef in Model.AllChefs)
                {
                    <tr>
                        <td>
                            @chef.FirstName @chef.LastName
                        </td>
                        <td>@chef.DateOfBirth</td>
                        <td>@chef.CreatedDishes.Count</td>
                    </tr>
                }
            </table>
        </div>
    </div>
</body>
</html>