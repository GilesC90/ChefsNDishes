@model CRUDelicious.Models.Home.Dish;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>New Dish</title>
</head>
<body>
    <div class="container">
        <div class="header">
            <div>
                <a href="/">Home</a>
            </div>
            <div>
                <h3>Edit @Model.Name!</h3>
            </div>
            <div class="card-body">
            <form action="/update/@Model.DishId" method="POST">
                <div class="form-group">
                    <span asp-validation-for="Name"></span>
                    <label asp-for="Name">Name:</label>
                    <input asp-for="Name" class="form-control">
                </div>
                <div class="form-group">
                    <span asp-validation-for="Chef"></span>
                    <label asp-for="Chef">Chef:</label>
                    <input asp-for="Chef" class="form-control">
                </div>
                <div class="form-group">
                    <span asp-validation-for="Tastiness"></span>
                    <label asp-for="Tastiness">Tastiness:</label>
                    <input asp-for="Tastiness" class="form-control">
                </div>
                <div class="form-group">
                    <span asp-validation-for="Calories"></span>
                    <label asp-for="Calories">Calories:</label>
                    <input asp-for="Calories" class="form-control">
                </div>
                <div class="form-group">
                    <span asp-validation-for="Description"></span>
                    <label asp-for="Description">Description:</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-success">Update Dish</button>
            </form>
        </div>
        </div>
    </div>
</body>
</html>